<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Polygon?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aerodynamics.controller.WeatherController">

    <!-- TOP SECTION: Brand and Input -->
    <top>
        <HBox alignment="CENTER" spacing="15.0" styleClass="top-section">
            <padding>
                <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
            </padding>
            <Label fx:id="companyTitle" styleClass="company-title" text="AERO DYNAMICS" />
            <Label styleClass="input-label" text="City:" />
            <TextField fx:id="cityField" promptText="Enter city name" styleClass="city-field" />
            <Button fx:id="refreshButton" mnemonicParsing="false" styleClass="refresh-button" text="Refresh Data" />
        </HBox>
    </top>

    <!-- CENTER SECTION: Main Weather Info -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" styleClass="center-section">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>

            <!-- Temperature -->
            <Label fx:id="temperatureLabel" styleClass="temperature" text="24째C" />

            <!-- Condition -->
            <Label fx:id="conditionLabel" styleClass="condition" text="Clear Sky" />

            <!-- Aircraft Shape -->
            <Polygon fx:id="aircraftShape" styleClass="aircraft-shape">
                <points>
                    <Double fx:value="0.0" />
                    <Double fx:value="10.0" />
                    <Double fx:value="20.0" />
                    <Double fx:value="0.0" />
                    <Double fx:value="40.0" />
                    <Double fx:value="10.0" />
                    <Double fx:value="30.0" />
                    <Double fx:value="10.0" />
                    <Double fx:value="30.0" />
                    <Double fx:value="20.0" />
                    <Double fx:value="10.0" />
                    <Double fx:value="20.0" />
                    <Double fx:value="10.0" />
                    <Double fx:value="10.0" />
                </points>
            </Polygon>

            <!-- Flight Information Grid - FIXED FOR FULL TEXT VISIBILITY -->
            <GridPane styleClass="flight-info">
                <columnConstraints>
                    <!-- First column for labels - WIDE ENOUGH FOR LONG TEXT -->
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="180.0" prefWidth="200.0" maxWidth="220.0" />
                    <!-- Second column for values -->
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="140.0" maxWidth="160.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                </rowConstraints>

                <children>
                    <!-- Row 1: Wind - WITH LINE BREAK -->
                    <Label styleClass="info-title" wrapText="true" text="Wind Speed &amp; Direction:"
                           GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label fx:id="windLabel" styleClass="info-value" text="15 km/h NW"
                           GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- Row 2: Visibility -->
                    <Label styleClass="info-title" text="Visibility:"
                           GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label fx:id="visibilityLabel" styleClass="info-value" text="10 km"
                           GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <!-- Row 3: Flight Conditions -->
                    <Label styleClass="info-title" text="Flight Conditions:"
                           GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <Label fx:id="flightStatusLabel" styleClass="flight-status-good" text="GOOD"
                           GridPane.columnIndex="1" GridPane.rowIndex="2" />
                </children>
            </GridPane>
        </VBox>
    </center>

    <!-- BOTTOM SECTION: Forecast -->
    <bottom>
        <HBox fx:id="forecastContainer" alignment="CENTER" spacing="25.0" styleClass="bottom-section">
            <padding>
                <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
            </padding>

            <!-- Day 1 Forecast -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="forecast-day">
                <Label fx:id="day1Label" styleClass="forecast-day-label" text="MON" />
                <Label fx:id="temp1Label" styleClass="forecast-temp" text="22째C" />
                <Label fx:id="cond1Label" styleClass="forecast-condition" text="Sunny" />
            </VBox>

            <!-- Day 2 Forecast -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="forecast-day">
                <Label fx:id="day2Label" styleClass="forecast-day-label" text="TUE" />
                <Label fx:id="temp2Label" styleClass="forecast-temp" text="20째C" />
                <Label fx:id="cond2Label" styleClass="forecast-condition" text="Cloudy" />
            </VBox>

            <!-- Day 3 Forecast -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="forecast-day">
                <Label fx:id="day3Label" styleClass="forecast-day-label" text="WED" />
                <Label fx:id="temp3Label" styleClass="forecast-temp" text="19째C" />
                <Label fx:id="cond3Label" styleClass="forecast-condition" text="Rain" />
            </VBox>
        </HBox>
    </bottom>
</BorderPane>
